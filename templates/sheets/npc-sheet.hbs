<form class="{{cssClass}}" autocomplete="off">
    <div class="image">
        <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="160" width="160" style="display: block; margin-left: auto; margin-right: auto;"/>
    </div>

    <div class="infoBar">
        <div class="topRow">
            <div class="name"><input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "sfrpgbb.character.name"}}"/></div>
            <div class="alignment">
                <select name="data.information.alignment">
                    {{#select data.information.alignment}}
                    {{#each config.alignments as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                    {{/each}}
                    {{/select}}
                </select>
            </div>
        </div>
        <div class="middleRow">
            <div class="initiative">
                <b>{{localize "sfrpgbb.movement.initiative"}} -&nbsp;</b>
                <input name="data.movement.initiative" type="number" value="{{data.movement.initiative}}" placeholder="+0" data-dtype="Number"/>
            </div>
            <div class="speed">
                <b>{{localize "sfrpgbb.movement.speed"}} -&nbsp;</b>
                <input name="data.movement.speed" type="number" value="{{data.movement.speed}}" placeholder="0" data-dtype="Number"/>
                &nbsp;{{localize "sfrpgbb.general.ft"}}
            </div>
            <div class="cr">
                <b>{{localize "sfrpgbb.character.cr"}} -&nbsp;</b>
                <input name="data.information.cr" type="number" value="{{data.information.cr}}" placeholder="1" data-dtype="Number"/>
            </div>
            <div class="xp">
                <b>{{localize "sfrpgbb.character.xp"}} -&nbsp;</b>
                <input name="data.information.xp" type="number" value="{{data.information.xp}}" placeholder="400" data-dtype="Number"/>
            </div>
            <div class="hp">
                <b>{{localize "sfrpgbb.defence.hp"}} -&nbsp;</b>
                <input name="data.defence.hp.value" type="number" value="{{data.defence.hp.value}}" placeholder="10" data-dtype="Number"/>
                &nbsp;/&nbsp;<input name="data.defence.hp.max" type="number" value="{{data.defence.hp.max}}" placeholder="10" data-dtype="Number"/>
            </div>
        </div>
    </div>

</form>