<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="icon" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize "sfrpgbb.general.name" }}"/></h1>
    </header>
    <div class="sheet-content">
        <table>
            <tr>
                <th>{{localize "sfrpgbb.equipment.price"}}</th>
                <th>{{localize "sfrpgbb.weapon.weaponType"}}</th>
                <th>{{localize "sfrpgbb.equipment.isTech"}}</th>
                <th>{{localize "sfrpgbb.equipment.isMagic"}}</th>
                <th></th>
            </tr>
            <tr>
                <td>
                    <input name="system.price" type="number" value="{{system.price}}" data-dtype="Number" />
                </td>
                <td>
                    <select name="system.weaponType">
                        {{#select system.weaponType}}
                        {{#each config.attackTypes as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td>
                    <input name="system.isTech" type="checkbox" {{checked system.isTech}} />
                </td>
                <td>
                    <input name="system.isMagic" type="checkbox" {{checked system.isMagic}} />
                </td>
            </tr>
            <tr>
                <th>{{localize "sfrpgbb.weapon.damage"}}</th>
                <th>{{localize "sfrpgbb.weapon.damageType"}}</th>
                <th>{{localize "sfrpgbb.weapon.range"}}</th>
                <th>{{localize "sfrpgbb.weapon.specialProperty"}}</th>
                <th>{{localize "sfrpgbb.weapon.critical"}}</th>
            </tr>
            <tr>
                <td>
                    <input name="system.damage" type="text" value="{{system.damage}}" />
                </td>
                <td>
                    <select name="system.damageType">
                        {{#select system.damageType}}
                        {{#each config.damageTypes as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td>
                    <input name="system.range" type="number" value="{{system.range}}" data-dtype="Number" />
                </td>
                <td>
                    <select name="system.special">
                        {{#select system.special}}
                        {{#each config.weaponSpecials as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td>
                    <select name="system.critical">
                        {{#select system.critical}}
                        {{#each config.weaponCriticals as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
            </tr>
        </table>
        <b>{{localize "sfrpgbb.equipment.weapon"}} - {{localize "sfrpgbb.general.description"}}</b>
        {{editor system.description target="system.description" button=true owner=owner editable=true}}
    </div>
</form>
