<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="icon" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize "sfrpgbb.general.name" }}"/></h1>
    </header>
    <div class="sheet-content">
        <table>
            <tr>
                <th>{{localize "sfrpgbb.equipment.price"}}</th>
                <th>{{localize "sfrpgbb.equipment.isTech"}}</th>
                <th>{{localize "sfrpgbb.equipment.isMagic"}}</th>
                <th colspan=2>{{localize "sfrpgbb.defence.saveType"}}</th>
                <th>{{localize "sfrpgbb.defence.DC"}}</th>
            </tr>
            <tr>
                <td>
                    <input name="data.price" type="number" value="{{data.price}}" data-dtype="Number" />
                </td>
                <td>
                    <input name="data.isTech" type="checkbox" {{checked data.isTech}} />
                </td>
                <td>
                    <input name="data.isMagic" type="checkbox" {{checked data.isMagic}} />
                </td>
                <td colspan=2>
                    <select name="data.saveType">
                        {{#select data.saveType}}
                        {{#each config.saveTypes as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td>
                    <input name="data.saveDC" type="number" value="{{data.saveDC}}" data-dtype="Number" />
                </td>
            </tr>
            <tr>
                <th>{{localize "sfrpgbb.weapon.damage"}}</th>
                <th>{{localize "sfrpgbb.weapon.damageType"}}</th>
                <th>{{localize "sfrpgbb.weapon.range"}}</th>
                <th colspan=3>{{localize "sfrpgbb.weapon.specialEffect"}}</th>
            </tr>
            <tr>
                <td>
                    <input name="data.damage" type="text" value="{{data.damage}}" />
                </td>
                <td>
                    <select name="data.damageType">
                        {{#select data.damageType}}
                        {{#each config.damageTypes as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td>
                    <input name="data.range" type="number" value="{{data.range}}" data-dtype="Number" />
                </td>
                <td colspan=3>
                    <input name="data.special" type="text" value="{{data.special}}" data-dtype="String" />
                </td>
            </tr>
        </table>
        <b>{{localize "sfrpgbb.equipment.grenade"}} - {{localize "sfrpgbb.general.description"}}</b>
        {{editor content=data.description target="data.description" button=true owner=owner editable=true}}
    </div>
</form>
