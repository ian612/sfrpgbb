<table>
    <tr>
        <th colspan="6">{{localize "sfrpgbb.attack.attacks"}}</th>
    </tr>
    <tr>
        <td class="blockTitle">
            {{localize "sfrpgbb.attack.meleeAttack"}}
        </td>
        <td class="blueBox rightThickBorder">
            <sup class="superscript">{{localize "sfrpgbb.general.total"}}</sup><br>
            {{numberFormat system.attack.bonus.melee.value decimals=0 sign=true}}
        </td>
        <td class="blockTitle">
            <sup class="superscript">{{localize "sfrpgbb.ability.strength"}}</sup><br>
            {{numberFormat system.abilities.strength.mod decimals=0}}
        </td>
        <td class="plus">
            <br>+
        </td>
        <td class="blockTitle rightThickBorder">
            <sup class="superscript">{{localize "sfrpgbb.general.class"}}</sup><br>
            <input name="system.attack.bonus.melee.class" type="number" style="width: 3em" value="{{system.attack.bonus.melee.class}}" data-dtype="Number" />
        </td>
        <td class="blueBox">
            <sup class="superscript">{{localize "sfrpgbb.attack.damageBonus"}}</sup><br>
            {{fetchPositive system.abilities.strength.mod}} <input name="system.attack.bonus.melee.damageBonus" type="number" style="width: 3em" value="{{system.attack.bonus.melee.damageBonus}}" data-dtype="Number" />
        </td>
    </tr>
    <tr>
        <td class="blockTitle">
            {{localize "sfrpgbb.attack.rangedAttack"}}
        </td>
        <td class="blueBox rightThickBorder">
            <sup class="superscript">{{localize "sfrpgbb.general.total"}}</sup><br>
            {{numberFormat system.attack.bonus.ranged.value decimals=0 sign=true}}
        </td>
        <td class="blockTitle">
            <sup class="superscript">{{localize "sfrpgbb.ability.dexterity"}}</sup><br>
            {{numberFormat system.abilities.dexterity.mod decimals=0}}
        </td>
        <td class="plus">
            <br>+
        </td>
        <td class="blockTitle rightThickBorder">
            <sup class="superscript">{{localize "sfrpgbb.general.class"}}</sup><br>
            <input name="system.attack.bonus.ranged.class" type="number" style="width: 3em;" value="{{system.attack.bonus.ranged.class}}" data-dtype="Number" />
        </td>
        <td class="blueBox">
            <sup class="superscript">{{localize "sfrpgbb.attack.damageBonus"}}</sup><br>
            {{fetchPositive system.abilities.strength.mod}} <input name="system.attack.bonus.ranged.damageBonus" type="number" style="width: 3em;" value="{{system.attack.bonus.ranged.damageBonus}}" data-dtype="Number" />
        </td>
    </tr>
</table>
<body class="superscript">{{localize "sfrpgbb.weapon.strAsterisk"}}</body>